<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/paddingLeft14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="14dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/paddingRight14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="14dp" />

        <ImageView
            android:id="@+id/locationImage"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/location_shape"
            app:layout_constraintLeft_toRightOf="@id/paddingLeft14dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            app:layout_constraintTop_toTopOf="@id/locationImage"
            app:layout_constraintBottom_toBottomOf="@id/locationImage"
            app:layout_constraintStart_toEndOf="@id/locationImage"
            android:text="@string/moviesList"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        
        <ImageView
            android:id="@+id/movie"
            android:layout_width="170dp"
            android:layout_height="296dp"
            android:background="@drawable/movie_card_background"
            app:layout_constraintStart_toEndOf="@id/paddingLeft14dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="108dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="166dp"
            android:layout_height="246dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintStart_toStartOf="@id/movie"
            android:layout_marginStart="2dp"
            app:layout_constraintTop_toTopOf="@id/movie"
            android:layout_marginTop="2dp"
            app:cardElevation="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/posterMask"
            android:layout_width="166dp"
            android:layout_height="246dp"
            app:layout_constraintStart_toStartOf="@id/movie"
            app:layout_constraintTop_toTopOf="@id/movie"
            android:src="@drawable/poster_mask"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"/>

        <ImageView
            android:id="@+id/pgRatingRectangle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/pg_rectangle"
            app:layout_constraintLeft_toLeftOf="@id/movie"
            app:layout_constraintTop_toTopOf="@id/movie"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/pgRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/pgRating"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/pgRatingRectangle"
            app:layout_constraintBottom_toBottomOf="@id/pgRatingRectangle"
            app:layout_constraintStart_toStartOf="@id/pgRatingRectangle"
            app:layout_constraintEnd_toEndOf="@id/pgRatingRectangle"/>
        <ImageView
            android:id="@+id/like"
            android:layout_width="16dp"
            android:layout_height="14dp"
            android:src="@drawable/like"
            app:layout_constraintTop_toTopOf="@id/pgRatingRectangle"
            app:layout_constraintBottom_toBottomOf="@id/pgRatingRectangle"
            app:layout_constraintEnd_toEndOf="@id/movie"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/tag_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/tagLine"
            android:textColor="@color/pink_ish"
            android:textSize="8sp"
            app:layout_constraintLeft_toLeftOf="@id/posterMask"
            app:layout_constraintBottom_toBottomOf="@id/posterMask"
            android:layout_marginBottom="22dp"
            android:layout_marginStart="8dp"
            />
        <ImageView
            android:id="@+id/star_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/star_selected"
            app:layout_constraintLeft_toLeftOf="@id/tag_line"
            app:layout_constraintTop_toBottomOf="@id/tag_line" />

        <ImageView
            android:id="@+id/star_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/star_selected"
            app:layout_constraintLeft_toRightOf="@id/star_1"
            app:layout_constraintTop_toBottomOf="@id/tag_line" />

        <ImageView
            android:id="@+id/star_3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/star_selected"
            app:layout_constraintLeft_toRightOf="@id/star_2"
            app:layout_constraintTop_toBottomOf="@id/tag_line" />

        <ImageView
            android:id="@+id/star_4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/star_selected"
            app:layout_constraintLeft_toRightOf="@id/star_3"
            app:layout_constraintTop_toBottomOf="@id/tag_line" />

        <ImageView
            android:id="@+id/star_5"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/star"
            app:layout_constraintLeft_toRightOf="@id/star_4"
            app:layout_constraintTop_toBottomOf="@id/tag_line" />

        <TextView
            android:id="@+id/reviews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@string/reviews"
            android:textColor="@color/gray_ish"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/star_5"
            app:layout_constraintTop_toTopOf="@id/star_1"
            app:layout_constraintBottom_toBottomOf="@id/star_1"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_in_one_line"
            android:textColor="@color/not_so_white"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/posterMask"
            app:layout_constraintStart_toStartOf="@id/movie"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:text="@string/length"
            android:textStyle="bold"
            android:textColor="@color/length_color"
            android:textSize="8sp"
            android:lineHeight="12sp"/>





            









    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>